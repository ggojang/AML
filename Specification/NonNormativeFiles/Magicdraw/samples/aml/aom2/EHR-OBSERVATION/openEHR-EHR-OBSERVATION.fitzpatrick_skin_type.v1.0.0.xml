 <terminology original_language="ISO_639-1::en">
  <term_definitions id="en">
   <items id="id1">
    <text>Fitzpatrick skin type</text>
    <description>Numerical schema for classifying skin colour type based on reaction to ultraviolet radiation exposure. </description>
   </items>
   <items id="id3">
    <text>Any event</text>
    <description>*</description>
   </items>
   <items id="id5">
    <text>Skin type</text>
    <description>The Fitzpatrick Skin type.</description>
   </items>
   <items id="at6">
    <text>I</text>
    <description>Always burn, never tan</description>
   </items>
   <items id="at7">
    <text>II</text>
    <description>Usually burn, tan less than average (with difficulty)</description>
   </items>
   <items id="at8">
    <text>III</text>
    <description>Sometimes mild burn, tan about average</description>
   </items>
   <items id="at9">
    <text>IV</text>
    <description>Rarely burn, tan more than average (with ease)</description>
   </items>
   <items id="at10">
    <text>V</text>
    <description>Brown skin, rarely burns, tans profusely</description>
   </items>
   <items id="at11">
    <text>VI</text>
    <description>Black skin, never burns</description>
   </items>
   <items id="ac1">
    <text>Skin type (synthesised)</text>
    <description>The Fitzpatrick Skin type. (synthesised)</description>
   </items>
